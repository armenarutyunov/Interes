<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Online Restaurant</title>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>


    <script>window.jQuery || document.write('<script src="~JQUERY/jquery-3.3.1.js"><\/script>');</script>


    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <style>

        body {
            /*background-image: repeating-linear-gradient(0deg,white 3%, grey 16%  );*/
            background-image: url('../Media/Login-Background-Black.jpg');
            /*background-image: url('../Media/imgonline-com-ua-Transparent-backgr-yN9KaoPbNK3Hi.png');*/
        }

        .DivForButton {
            position: relative;
            position: center;
            height: 70%;
            top: 3px;
            border: solid;
            border-radius: 7px;
            border-width: 1px;
            border-color: white;
            text-align: center;
        }

            .DivForButton:hover {
                background-color: white;
            }
    </style>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">

            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav" style="font-size:20px;color:darkorange;">

                    <li>
                        <div class="DivForButton">
                            <a href="/" class="btn  btn-md" style=" font-weight:bold; font-size:20px;color:darkorange; ">Home</a>
                        </div>
                    </li>
                    <li>&nbsp;</li>
                    <li>
                        <div class="DivForButton">
                            <a href="/Home/HIW" class="btn  btn-md" style="font-weight:bold; font-size:20px;color:darkorange;">How It Works</a>
                        </div>
                    </li>
                    <li>&nbsp;</li>
                    <li>
                        <div class="DivForButton">
                            <a href="/Menu/Menu" class="btn btn-md" style="font-weight:bold; font-weight:600;font-size:20px;color:darkorange;">Dishes Selection</a>
                        </div>
                    </li>
                    @*<li>&nbsp;</li>
                        <li><div class="DivForButton">
                        <a href="/Menu/ShowBasket" class="btn btn-md" style="font-weight:bold; font-size:20px;color:orangered;">My Basket</a>
                        </div></li>*@
                    @*<li>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</li>
                        <li><a href="/Login/login"  style="font-size:20px;color:orangered;">Sign In</a>
                        </li>*@
                    <li>&nbsp;</li>
                    <li>
                        <div class="DivForButton"><a href="/Login/SignUp" class="btn btn-md" style="font-weight:bold; font-weight:600;font-size:20px;color:darkorange;">Sign Up</a></div>
                    </li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()

        <footer>
            <p style="color:whitesmoke;">&copy; @DateTime.Now.Year  A&AA Production inc.</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
