@model Interes.Models.SignUpData
@{
    Layout = "~/Views/Shared/_Layout_SignUp.cshtml";
}

@{
    ViewBag.Title = "Login";
}
<style>

    #SubmitBtn {
        border: solid;
        border-width: 2px;
        border-color: whitesmoke;
        border-radius: 7px;
        background-color: black;
        color: darkorange;
        font-size: 1.5em;
        font-weight: bold;
    }

        #SubmitBtn:hover {
            background-color: white;
        }
</style>
<br />

@using (Html.BeginForm("SignUp", "Login", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <table>
        <tr>
            <th colspan="2">
                <div class="form-group">
                    <div class="col-lg" style=" border:solid; border:4px; border-color:red">
                        <h2 style="color:whitesmoke;">Please, enter below your personal information</h2>
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    </div>
                </div>
            </th>

        </tr>
        <tr><td colspan="2"><hr /></td></tr>
        <tr>
            <td>
                <div class="form-group">
                    <div class="col-lg" style=" border:solid; border:4px; border-color:red">
                        <h3 style="color:darkorange;">First Name</h3>
                        @Html.EditorFor(model => model.FirstName, new { htmlAttributes = new { @class = "form-control", @style = "width:25em; padding-left:0.5em;"  } })<br />
                        @Html.ValidationMessageFor(model => model.FirstName, "", new { @class = "text-danger", @style = "color:yellow" })
                    </div>
                </div>
            </td>
            <td>
                <div class="form-group">
                    <div class="col-lg" style=" border:solid; border:4px; border-color:red">
                        <h3 style="color:darkorange;">Last Name</h3>
                        @Html.EditorFor(model => model.LastName, new { htmlAttributes = new { @class = "form-control", @style = "width:25em; padding-left:0.5em;" } })<br />
                        @Html.ValidationMessageFor(model => model.LastName, "", new { @class = "text-danger", @style = "color:yellow" })
                    </div>
                </div>
            </td>
        </tr>
        <tr>
            <td>
                <div class="form-group">

                    <div class="col-lg" style=" border:solid; border:4px; border-color:red">
                        <h3 style="color:darkorange;">Contact Phone</h3>
                        @Html.EditorFor(model => model.Phone, new { htmlAttributes = new {@class = "form-control", @style = "width:25em; padding-left:0.5em;" } })<br />
                        @Html.ValidationMessageFor(model => model.Phone, "", new { @class = "text-danger", @style = "color:yellow" })
                    </div>
                </div>
            </td>
            <td>
                <div class="form-group">
                    <div class="col-lg" style=" border:solid; border:4px; border-color:red">
                        <h3 style="color:darkorange;">Email Address</h3>
                        @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control", @style = "width:25em; padding-left:0.5em;" } })<br />
                        @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger", @style = "color:yellow" })
                    </div>
                </div>
            </td>
        </tr>
        <tr>
            <td>
                <div class="form-group">
                    <div class="col-lg" style=" border:solid; border:4px; border-color:red">
                        <h3 style="color:darkorange;">Password</h3>
                        @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control", @style = "width:25em; padding-left:0.5em;"  } })<br />
                        @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger", @style = "color:yellow" })
                    </div>
                </div>
            </td>
        </tr>
        <tr><td colspan="2"><hr /></td></tr>
        <tr>
            <td colspan="2" style="vertical-align:bottom;">
                <div class="form-group">
                    <div class="col-lg">
                        <div style="text-emphasis-color:orangered; text-decoration-color:black; font-weight:bold;">
                            <input id="SubmitBtn" style="" type="submit" value="Submit" class="btn btn-group-lg" />
                        </div>
                    </div>
                </div>
            </td>
        </tr>
        <tr><td colspan="2"><hr /></td></tr>
    </table>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}