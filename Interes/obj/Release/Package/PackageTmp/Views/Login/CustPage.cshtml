                </div>
            </td>
            <td>
                <div class="col-md-10" style="padding-left:0;">
                    <input class="form-control text-box single-line" type="text" name="CurPass" , style="width:15em;" />
                </div>
            </td>
            <td>
                <div class="form-group" style="padding-left:0;">
                    <div class="col-md-offset-2 col-md-10">
                        <input id="SubmitBtn" type="submit" value="Update" class="btn btn-default" />
                    </div>
                </div>
            </td>
            <td></td>
        </tr>

        @*<tr>
                <td colspan="4"><hr /></td>
            </tr>*@

        @*<tr>
                <td colspan="4"><div class="col-md-10">  @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })</div></td>

            </tr>*@



    </table>
    <div class="col-md-10" style="padding-left:0;">
        @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger", style = "color:yellow;" })
    </div>
