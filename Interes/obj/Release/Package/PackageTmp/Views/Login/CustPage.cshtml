@model Interes.Models.SignUpData

@{
    /**/

    ViewBag.Title = "CustPage";
    Layout = "~/Views/Shared/_Layout_Checkout_Nav.cshtml";
}

<h2 style="color:orangered;">@ViewBag.msgUpDec</h2>


@using (Html.BeginForm("Update", "Login", /*new { id = item.Id },*/FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <table>
        @*<div class="form-horizontal">*@
        <tr>
            <td colspan="4">
                <h1 style="color: darkorange;">Hello, @Model.FirstName @Model.LastName! </h1>
                <h4>Here you can update your personal data and change your password</h4>
                <hr />
            </td>
        </tr>
        <tr>
            <td colspan="4"><div class="col-md-10">@Html.ValidationSummary(true, "", new { @class = "text-danger", style = "color:yellow;" })</div></td>

        </tr>
        <tr>
            <td class="LableCustPage">First Name</td>
            <td>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.FirstName, new { htmlAttributes = new { @class = "form-control", @style = "width:15em;" } })

                </div>
            </td>
            <td></td>
            <td></td>
        </tr>
        <tr>
            <td></td>
            <td><div class="col-md-10"> @Html.ValidationMessageFor(model => model.FirstName, "", new { @class = "text-danger", style = "color:yellow;" })</div></td>
            <td></td>
            <td></td>
        </tr>
        <tr>
            <td class="LableCustPage">Last Name</td>
            <td>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.LastName, new { htmlAttributes = new { @class = "form-control", @style = "width:15em;" } })
                </div>
            </td>
            <td></td>
            <td></td>
        </tr>
        <tr>
            <td></td>
            <td> <div class="col-md-10"> @Html.ValidationMessageFor(model => model.LastName, "", new { @class = "text-danger", style = "color:yellow;" })</div></td>
            <td></td>
            <td></td>
        </tr>
        <tr>
            <td class="LableCustPage">Phone</td>
            <td>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Phone, new { htmlAttributes = new { @class = "form-control", @style = "width:15em;" } })

                </div>
            </td>
            <td></td>
            <td></td>
        </tr>
        <tr>
            <td></td>
            <td> <div class="col-md-10"> @Html.ValidationMessageFor(model => model.Phone, "", new { @class = "text-danger", style = "color:yellow;" })</div></td>
            <td></td>
            <td></td>
        </tr>

        <tr>
            <td class="LableCustPage">Email</td>
            <td>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control", @style = "width:15em;" } })

                </div>
            </td>
            <td>
                <div class="form-group" style="padding-left:6em;">
                    <div class="col-md-offset-2 col-md-10">
                        <input id="SubmitBtn" type="submit" value="Update" class="btn btn-default" />
                    </div>
                </div>
            </td>
            <td></td>
            <td></td>
        </tr>
        <tr>
            <td></td>
            <td><div class="col-md-10">  @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger", style = "color:yellow;" })</div></td>
            <td></td>
            <td></td>
        </tr>
        <tr>
            <td colspan="4"><hr /></td>
        </tr>
        <tr>
            <td colspan="4"><h4>To update your password, enter your current password along with new one</h4></td>
        </tr>
    </table>
    @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control", @style = "padding-left:0; display:none;" } })

    @*@Html.Hidden(Model.Password, Model.Password)*@
}

@using (Html.BeginForm("UpdatePassword", "Login", /*new { id = item.Id },*/FormMethod.Post))
