@model  Interes.Models.LoginData
@{
    Layout = "~/Views/Shared/_Layout_Login.cshtml";
}
@{
    ViewBag.Title = "Login";
}
<style>

        hr {
            border: none; /* Убираем границу для браузера Firefox */
            color: whitesmoke; /* Цвет линии для остальных браузеров */
            background-color: whitesmoke; /* Цвет линии для браузера Firefox и Opera position:relative;*/
            height: 1px; /* Толщина линии */
            width: 40%;
            margin-left: 0;
        }

        #SubmitBtn {
            border: solid;
            border-width: 2px;
            border-color: whitesmoke;
            border-radius: 7px;
            background-color: black;
            color: darkorange;
            font-size: 1.5em;
            font-weight: bold;
        }

            #SubmitBtn:hover {
                background-color: white;
            }
    </style>
@using (Html.BeginForm("Login", "Login", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <br />
    <h2 style="color:whitesmoke;">Enter Your Credentials Here</h2>

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group" @*style =" width:150px; height:100px;"*@>
            <div class="col-md-10">
                <h3 style="color:darkorange;">Email address</h3>
                @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control", @style = "width:25em; padding-left:0.5em;" } })<br />
                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger", @style = "color:yellow" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-lg-8">
                <h3 style="color:darkorange;">Password</h3>
                @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control", @style = "width:25em; padding-left:0.5em;" } })<br />
                @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger", @style = "color:yellow" })
            </div>
        </div>
        <hr />
        <div class="form-group">
            <div class="col-md-10">

                <input id="SubmitBtn" style="" type="submit" value="Submit" class="btn btn-group-lg" /> @*<div class="col-md-offset-2 col-md-10">*@
            </div>
        </div>
        <hr />
   </div>
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}