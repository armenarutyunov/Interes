<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Online Restaurant</title>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>


    <script>
    window.jQuery || document.write('<script src="~JQUERY/jquery-3.3.1.js"><\/script>');
        $().ready(function () {

            $('#ProductsBtn').on("click", EmptyStates);


        });
        function EmptyStates()
        {
            $("#Check_AS").prop('checked', false);
            $("#Check_MC").prop('checked', false);
            $("#Check_SP").prop('checked', false);
            $("#Check_DS").prop('checked', false);
            $("#Check_BG").prop('checked', false);
            $("#Check_BR").prop('checked', false);
            $("#Check_ALL").prop('checked', false);
        }

    </script>



    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/MyScripts/SelectCategory.js")

    <style>
        body {
            /*background-image: repeating-linear-gradient(0deg,white 3%, grey 16%  );*/
            background-image: url('../Media/Login-Background-Black.jpg');
            background-attachment: fixed;
            /*background-image: url('../Media/imgonline-com-ua-Transparent-backgr-yN9KaoPbNK3Hi.png');*/
        }

        .DivForButton {
            position: relative;
            position: center;
            height: 70%;
            top: 3px;
            border: solid;
            border-radius: 7px;
            border-width: 1px;
            border-color: white;
            text-align: center;
            margin: -2px;
        }

            .DivForButton:hover {
                background-color: white;
            }
    </style>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav" style="font-size:20px;color:red;">
                    <li>
                        <div class="DivForButton">
                            <a href="/Home/Home" class="btn  btn-md" style="font-weight:bold; font-size:20px;color:darkorange;">Home</a>
                        </div>
                    </li>
                    <li>&nbsp;</li>
                    <li>
                        <div class="DivForButton">
                            <a href="/Admin/Products" class="btn  btn-md" id="ProductsBtn" style=" font-weight:bold; font-size:20px;color:darkorange; ">Products</a>
                        </div>
                    </li>
                    <li>&nbsp;</li>
                    <li>
                        <div class="DivForButton">
                            <a href="/Admin/Customers" class="btn  btn-md" style="font-weight:bold; font-size:20px;color:darkorange;">Customers</a>
                        </div>
                    </li>
                    <li>&nbsp;</li>
                    <li>
                        <div class="DivForButton">
                            <a href="/Admin/Logins" class="btn btn-md" style="font-weight:bold; font-weight:600;font-size:20px;color:darkorange;">Logins</a>
                        </div>
                    </li>
                    <li>&nbsp;</li>
                    <li>
                        <div class="DivForButton">
                            <a href="/Admin/Orders" class="btn btn-md" style="font-weight:bold; font-size:20px;color:darkorange;">Orders</a>
                        </div>
                    </li>
                    <li>&nbsp;</li>

                    <li>
                        <div class="DivForButton">
                            <a href="/Login/AdminSignOut" class="btn  btn-md" style=" font-weight:bold; font-size:20px;color:darkorange; ">Sign Out</a>
                        </div>
                    </li>

                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year  A&AA Production inc.</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @*@RenderSection("scripts", required: false)*@
</body>
</html>
