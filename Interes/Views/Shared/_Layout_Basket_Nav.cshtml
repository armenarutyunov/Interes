
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Online Restaurant</title>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>


    <script>window.jQuery || document.write('<script src="~JQUERY/jquery-3.3.1.js"><\/script>');</script>

    @*@Scripts.Render("~/MyScripts/SelectCategory.js")*@
    @*@Scripts.Render("~/MyScripts/SelectCountryCat.js")
        @Scripts.Render("../MyScripts/SelectCountryCat.js")*@

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Styles.Render("~/Content/Home.css")
    @*@Styles.Render("~/Content/Home.css")*@

    <style>
        body {
            /*background-image: repeating-linear-gradient(90deg,white 1%,grey 2% );*/ /*,green 3%*/
            /*background-image: url('../Media/Login-Background-Eastern.jpg');*/
            /*background-repeat: no-repeat;*/
            background-image: url('../Media/Login-Background-Black.jpg');
            background-attachment: fixed;
            color: whitesmoke;
        }

        .DivForElement {
            position: relative;
            position: center;
            height: 70%;
            top: 0px;
            color: whitesmoke;
            text-align: center;
        }
        .DivForImg {
            position: relative;
            position: center;
            height: 70%;
            top: 3px;
            text-align: left;
        }
        #CleanBasketBtn {
            font-weight: bold;
            font-size: 1em;
            background-color: darkred;
            color: whitesmoke;
            border: double;
            border-color: whitesmoke;
        }

            #CleanBasketBtn:hover {
                background-color: whitesmoke;
                color: darkred;
                border-color: darkred;
            }
        #RemoveBtn {
            font-size:1em;  color:yellow;
            background-color: transparent;
            text-decoration: none;
            border: double; border-color:whitesmoke;border-width:1px; border-radius:0.2em;
            width:9em; height:2em;
            padding:0.3em;
           
        }
        #RemoveBtn:hover{
                font-size:1em;  color:black;
                background-color: whitesmoke;
                border: double; border-color: red;border-width:1px; border-radius:0.2em;
                width:9em;
                height:2em;
                padding:0.3em;
        }
    </style>
</head>
<body>

    @{Html.RenderAction("NavForBasket", "Home");}
    <div class="container body-content">
        @RenderBody()
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
